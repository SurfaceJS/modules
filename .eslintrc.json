{
    "extends": "@surface",
    "root": true,
    "parserOptions": {
        "project": "./tsconfig.eslint.json"
    },
    "rules": {
        "@typescript-eslint/brace-style": [
            "warn",
            "allman",
            {
                "allowSingleLine": true
            }
        ],
        "complexity": [
            "warn",
            35
        ],
        "max-depth": [
            "warn",
            8
        ],
        "max-len": [
            "warn",
            250
        ],
        "max-lines": [
            "warn",
            1000
        ],
        "max-lines-per-function": [
            "warn",
            150
        ],
        "max-nested-callbacks": "warn",
        "max-params": [
            "warn",
            10
        ],
        "max-statements": [
            "warn",
            50
        ],
        "newline-per-chained-call": [
            "error",
            {
                "ignoreChainWithDepth": 4
            }
        ]
    }
}
