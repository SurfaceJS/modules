{
    "author": "HitalloExiled",
    "description": "Global modules and shared types",
    "devDependencies": {
        "@commitlint/cli": "^16.2.3",
        "@commitlint/config-conventional": "^16.2.1",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "c8": "^7.11.2",
        "eslint": "^8.14.0",
        "eslint-plugin-import": "^2.26.0",
        "husky": "^7.0.4",
        "mocha": "^9.2.2",
        "rimraf": "^3.0.2",
        "tslib": "^2.4.0",
        "typescript": "^4.6.3"
    },
    "keywords": [
        "types",
        "tests",
        "shared"
    ],
    "license": "MIT",
    "name": "surface",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SurfaceJS/surface.git"
    },
    "scripts": {
        "version:pre": "npm version pre --preid=next --workspaces",
        "build": "tsc --build",
        "clean": "tsc --build --clean",
        "clean-build": "tsc --build --clean && tsc --build",
        "cover": "c8 --check-coverage npm test",
        "cover-summary": "c8 --reporter=text-summary --check-coverage npm run test-summary",
        "lint": "eslint . --cache --ext .ts",
        "postinstall": "npm run build",
        "prepare": "husky install .husky",
        "publish-nightly": "node ./tasks/cli publish https://registry.npmjs.org --mode=nightly",
        "publish-release": "node ./tasks/cli publish https://registry.npmjs.org --mode=release",
        "reinstall": "npm run clean && npm i",
        "task:build": "node ./tasks/cli build",
        "task:clean": "node ./tasks/cli clean",
        "test": "mocha --loader=@surface/mock-loader --require=./tasks/polyfill.js **/packages/@surface/*/tests/**/*.spec.js",
        "test-summary": "npm test -- --reporter=progress"
    },
    "type": "module",
    "version": "1.0.0",
    "workspaces": [
        "./packages/@surface/*",
        "./tasks"
    ]
}