{
    "author": "HitalloExiled",
    "description": "Global modules and shared types",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "c8": "^7.11.2",
        "eslint": "^8.14.0",
        "eslint-plugin-import": "^2.26.0",
        "mocha": "^9.2.2",
        "rimraf": "^3.0.2",
        "tslib": "^2.4.0",
        "typescript": "^4.6.3"
    },
    "keywords": [
        "types",
        "tests",
        "shared"
    ],
    "license": "MIT",
    "name": "surface",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SurfaceJS/surface.git"
    },
    "scripts": {
        "build": "tsc --build",
        "clean": "rimraf ./node_modules ./package-lock.json ./packages/@surface/*/node_modules ./packages/@surface/*/package-lock.json && tsc --build --clean",
        "cover": "c8 --clean --check-coverage npm test",
        "lint": "eslint . --ext .ts",
        "postinstall": "npm run build",
        "reinstall": "npm run clean && npm i",
        "task:build": "node ./tasks/cli build",
        "task:clean": "node ./tasks/cli clean",
        "task:publish": "node ./tasks/cli publish",
        "test": "mocha --loader=@surface/mock-loader --require=./tasks/polyfill.js **/packages/@surface/*/tests/**/*.spec.js"
    },
    "type": "module",
    "version": "1.0.0",
    "workspaces": [
        "./packages/@surface/*",
        "./tasks"
    ]
}