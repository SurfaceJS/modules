{
    "author": "HitalloExiled",
    "description": "Global modules and shared types",
    "devDependencies": {
        "@commitlint/cli": "^17.0.2",
        "@commitlint/config-conventional": "^17.0.2",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "c8": "^7.11.3",
        "eslint": "^8.17.0",
        "eslint-plugin-import": "^2.26.0",
        "husky": "^8.0.1",
        "mocha": "^10.0.0",
        "rimraf": "^3.0.2",
        "tslib": "^2.4.0",
        "typescript": "^4.7.3"
    },
    "keywords": [
        "types",
        "tests",
        "shared"
    ],
    "license": "MIT",
    "name": "surface",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SurfaceJS/surface.git"
    },
    "scripts": {
        "publisher:bump": "publisher bump patch --log-level=info --dry --packages=packages/@surface/*",
        "publisher:publish": "publisher publish --log-level=trace --dry --packages=packages/@surface/*",
        "publisher:publish-canary": "publisher publish next --canary --log-level=trace --packages=packages/@surface/*",
        "publisher:unpublish": "publisher unpublish --log-level=trace --dry --packages=packages/@surface/*",
        "build": "npm run ts:build",
        "cover": "c8 --check-coverage npm test",
        "cover-summary": "c8 --reporter=text-summary --check-coverage npm run test-summary",
        "lint": "eslint . --cache --ext .ts",
        "postinstall": "npm run ts:build",
        "prepare": "husky install .husky",
        "publish-nightly": "node ./tasks/cli publish https://registry.npmjs.org --mode=nightly",
        "publish-release": "node ./tasks/cli publish https://registry.npmjs.org --mode=release",
        "reinstall": "npm run clean && npm i",
        "test": "mocha --loader=@surface/mock-loader --require=./tasks/polyfill.js **/packages/@surface/*/tests/**/*.spec.js",
        "test-summary": "npm test -- --reporter=progress",
        "ts:build": "tsc --build",
        "ts:clean": "tsc --build --clean",
        "ts:dry": "tsc --build --clean --dry",
        "ts:rebuild": "tsc --build --clean && tsc --build",
        "ts:watch": "tsc --build --watch"
    },
    "type": "module",
    "version": "1.0.0",
    "workspaces": [
        "./packages/@surface/*",
        "./tasks"
    ]
}
